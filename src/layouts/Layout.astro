---
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Portfolio of John F Denton - Educational Technologist, Instructional Designer, and Coding Teacher" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-neutral-900 text-neutral-100 min-h-screen">
    <Navigation />
    <!-- Under Construction Banner -->
    <div class="bg-yellow-600 border-b-4 border-yellow-500">
      <div class="container mx-auto px-4 py-3">
        <div class="flex items-center justify-center gap-3">
          <svg class="w-6 h-6 text-yellow-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
          <p class="text-yellow-900 font-semibold text-sm md:text-base">
            This site is currently under construction. Some content may be incomplete.
          </p>
        </div>
      </div>
    </div>
    <main class="container mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="bg-neutral-800 border-t border-neutral-700 mt-16">
      <div class="container mx-auto px-4 py-6 text-center text-neutral-400">
        <p>&copy; {new Date().getFullYear()} John F Denton. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    scroll-behavior: smooth;
  }
</style>
