---
interface Props {
  title: string;
  description: string;
  slug: string;
  thumbnail?: string;
}

const { title, description, slug, thumbnail = '/game-placeholder.svg' } = Astro.props;
---

<a
  href={`/games/${slug}`}
  class="group bg-neutral-800 rounded-lg border border-neutral-700 overflow-hidden hover:border-primary-500 hover:shadow-xl hover:shadow-primary-500/20 transition-all duration-300 flex flex-col"
>
  <div class="aspect-video bg-neutral-900 flex items-center justify-center overflow-hidden">
    <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-neutral-800 to-neutral-900 group-hover:from-primary-900/20 group-hover:to-secondary-900/20 transition-all duration-300">
      <svg class="w-24 h-24 text-neutral-700 group-hover:text-primary-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    </div>
  </div>
  <div class="p-6 flex-1 flex flex-col">
    <h3 class="text-xl font-bold text-primary-400 mb-2 group-hover:text-primary-300 transition-colors">
      {title}
    </h3>
    <p class="text-neutral-300 text-sm leading-relaxed flex-1">
      {description}
    </p>
    <div class="mt-4 flex items-center text-primary-500 font-medium text-sm group-hover:text-primary-400 transition-colors">
      <span>Play Game</span>
      <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
  </div>
</a>
